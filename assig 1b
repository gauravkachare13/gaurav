    <div id="login-form-wrap">
        <h2>Login</h2>
        <form id="form-signin">
          <p>
          <input type="text" id="userid" name="username" placeholder="Username" required><i class="validation"><span></span><span></span></i>
          </p>
          <p>
          <input type="email" id="pswd" name="email" placeholder="Email Address" required><i class="validation"><span></span><span></span></i>
          </p>
          <p>
            <button class="btn btn-primary btn-lg" id="login" type="button"
            onClick="getUser()"><a style="color:white;" href="index.html">Login</a></button>          </p>
